<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="input_text">
        <item name="android:layout_gravity">fill</item>
        <!--占满-->
        <item name="android:gravity">center_vertical|left</item>
        <!--内部文字等垂直居中左对齐-->
        <item name="android:layout_columnSpan">5</item>
        <!--占的列数-->
        <item name="android:layout_height">66dp</item>
        <item name="android:layout_width">295dp</item>
        <!--宽和高-->
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <!--设定和别的控件的距离-->
        <item name="android:scrollbars">vertical</item>
        <!--设定其可以垂直滑动-->
        <item name="android:singleLine">false</item>
        <!--设定其内容不在一行显示-->
        <item name="android:textColor">@color/input_text</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textScaleX">1.0</item>
        <!--设定文字颜色、大小、文字间距-->
        <item name="android:background">@drawable/border</item>
        <!--设定背景-->
    </style>
    <style name="button">
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_width">54dp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:background">@drawable/selectora</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@drawable/color_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:state_enabled">true</item>
        <!--后面两条属性用于设定按钮可以点击-->
    </style>
    <style name="buttonb" parent="@style/button">
        <item name="android:background">@drawable/selectorb</item>
        <!--parent表示继承自-->
    </style>
    <style name="buttonc" parent="@style/button">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_width">114dp</item>
    </style>
    <style name="buttond" parent="@style/buttonc">
        <item name="android:background">@drawable/selectorb</item>
        <item name="android:textSize">43sp</item>
    </style>
    <style name="buttone" parent="@style/buttond">
        <item name="android:background">@drawable/selectorc</item>
    </style>
    <style name="buttonf" parent="@style/button">
        <item name="android:background">@drawable/selectorc</item>
    </style>
    <style name="buttong" parent="@style/buttonb">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">51dp</item>
    </style>
    <style name="buttonh" parent="@style/buttong">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/selectorc</item>
    </style>
    <style name="edit_text" parent="@style/input_text">
        <item name="android:inputType">text</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_width">221dp</item>
    </style>
    <style name="edit_2" parent="@style/edit_text">
        <item name="android:inputType">text</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_width">52dp</item>
    </style>
    <style name="output_text" parent="@style/edit_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_columnSpan">5</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:layout_width">295dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/output_border</item>
    </style>
    <style name="output_2" parent="@style/output_text">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:layout_width">105dp</item>
        <item name="android:background">@drawable/border</item>
    </style>
    <style name="titlea" parent="@style/output_text">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
    </style>
    <style name="titleb" parent="@style/titlea">
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="select">
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Radio">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_columnSpan">5</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="select_for_radix" parent="@style/select">
        <item name="android:layout_width">85dp</item>
    </style>
    <style name="Radio_for_radix" parent="@style/Radio">
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="result_radix" parent="@style/input_text">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>
